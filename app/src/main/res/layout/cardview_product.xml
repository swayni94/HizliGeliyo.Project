<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="5dp"
    android:layout_width="195dp"
    android:layout_marginStart="5dp"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/cardview_product_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/cardview_product_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_home"
            android:inputType="textMultiLine"
            android:maxLines="2"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/cardview_product_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="TextViewEdits" />
        <TextView
            android:id="@+id/cardview_product_pice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sirala"
            android:textSize="20sp"
            android:textColor="@color/blue"
            app:layout_constraintTop_toBottomOf="@id/cardview_product_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>